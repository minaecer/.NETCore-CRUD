<div class="row pt-2 pb-2">
    <div class="col-sm-9">
        <h4 class="page-title">
            @*Başlık*@ Yeni Kişi Sayfası
        </h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item active" aria-current="page">
                @*Detay*@ Bu sayfa üzerinde yeni bir kişi ve bilgilerini ekleyebilirsiniz.
            </li>
        </ol>
    </div>
    <div class="col-sm-3">
        <div class="btn-group float-sm-right">
            <a href="/Kisiler/Listele/" class="btn btn-light">
                <i class="fa fa-list"></i>
                @*Button*@ Kişi Listesine Git
            </a>
        </div>
    </div>
</div>



<form action="/Kisiler/KisiKaydet/" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="form-header text-uppercase">
                        <i class="fa fa-users"></i>
                        @*Başlık*@ Yeni Kişi Bilgileri
                    </h4>
                    <div class="row">

                            <div class="form-group col-lg-6">
                                <label>Ad</label>
                            <input type="text" class="form-control" name="Ad">
                            </div>
               
                            <div class="form-group col-lg-6">
                                <label>Soyad</label>
                            <input type="text" class="form-control" name="Soyad">
                            </div>
                           <hr />
                        <div class="form-group col-lg-6">
                            <label>Telefon</label>
                            <input type="text" class="form-control" name="Telefon">
                        </div>

                        <div class="form-group col-lg-6">
                            <label>Mail</label>
                            <input type="text" class="form-control" name="Mail">
                        </div>
                        <hr />
                        <div class="form-group col-lg-12">
                            <label>Açık Adres Bilgisi</label>
                            <textarea rows="4" class="form-control" id="basic-textarea" name="Adres"></textarea>
                        </div>
                    </div>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-light"><i class="fa fa-save"></i> Kaydet </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>